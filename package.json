    "react-dropdown": "^1.2.0",
    "react-fontawesome": "^1.1.0",
    "react-hot-loader": "3.0.0-beta.6",
    "react-mdl": "^1.5.4",
    "react-motion": "^0.4.4",
    "react-relay": "^0.10.0",

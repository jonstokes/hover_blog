    "node-uuid": "^1.4.7",
    "normalize.css": "^5.0.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "postcss-loader": "^1.2.1",
    "precss": "^1.4.0",
    "react": "^15.4.1",

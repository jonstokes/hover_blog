{
  "name": "hoverboard",
  "version": "1.0.0",
  "description": "A full-stack relay boilerplate.",
  "scripts": {
    "start": "nodemon --watch 'server/data/**/*.js' --exec 'yarn run update && node server/index.js'",
    "update": "./node_modules/.bin/babel-node hoverBoard/updateSchema.js",
    "deploy": "npm run clean && cross-env NODE_ENV=production webpack --config webpack.config.js && npm run update && npm run build-server && cross-env NODE_ENV=production node ./build/index.js",
    "build-server": "cross-env NODE_ENV=production ./node_modules/.bin/babel ./server --out-dir ./build",
    "lint": "eslint --ignore-path .gitignore client server",
    "heroku-postbuild": "cross-env NODE_ENV=production webpack --config webpack.config.js && cross-env NODE_ENV=production ./node_modules/.bin/babel ./server --out-dir ./lib",
    "clean": "rm -rf build && mkdir build",
    "test": "./node_modules/.bin/jest --config=./server/tests/jest.json",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "node-testdebug": "node debug --harmony ./node_modules/jest-cli/bin/jest.js --runInBand",
    "devtool-testdebug": "./node_modules/devtool/bin/index.js ./node_modules/.bin/jest -i --no-cache --config=./server/tests/jest.debug.json"
  },
  "pre-commit": "lint",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/collectiveidea/hoverboard.git"
  },
  "keywords": [
    "react",
    "relay",
    "graphql",
    "express",
    "es6",
    "es7",
    "jsx",
    "webpack",
    "babel",
    "material design lite",
    "postcss",
    "scaffolding",
    "fullstack"
  ],
  "author": "Jon Stokes",
  "homepage": "https://github.com/collectiveidea/maxclicky",
  "devDependencies": {
    "@kadira/storybook": "^2.21.0",
    "babel-plugin-module-resolver": "^2.5.0",
    "devtool": "^2.3.1",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "hjs-webpack": "^8.3.0",
    "jest": "^19.0.2",
    "jest-environment-node-debug": "^2.0.0",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "redbox-react": "^1.3.3",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "autoprefixer": "^6.6.1",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-relay-plugin": "^0.10.0",
    "body-parser": "^1.15.2",
    "chalk": "^1.1.3",
    "connect-flash": "^0.1.1",
    "connect-history-api-fallback": "^1.3.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
